<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal"  android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/snippetImage" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/defaultimg"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textStyle="bold" android:id="@+id/snippetName" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pavan" android:textAllCaps="true"/>
        <TextView android:textSize="17sp" android:textStyle="bold" android:id="@+id/snippetDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last Seen:" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
